# Database Configuration
POSTGRES_USER=payment_user
POSTGRES_PASSWORD=payment_pass
POSTGRES_DB=payment_gateway
DATABASE_URL=postgresql+psycopg2://payment_user:payment_pass@postgres:5432/payment_gateway

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# RabbitMQ Configuration
RABBITMQ_USER=rabbitmq_user
RABBITMQ_PASSWORD=rabbitmq_pass
CELERY_BROKER_URL=amqp://rabbitmq_user:rabbitmq_pass@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Webhook Security
BANK_WEBHOOK_SECRET=your-bank-webhook-secret-change-this

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_USER_BALANCE=10
RATE_LIMIT_PER_USER_TRANSACTIONS=20
RATE_LIMIT_GLOBAL=1000

# Bank Simulator Configuration
BANK_SIMULATOR_MIN_DELAY=2
BANK_SIMULATOR_MAX_DELAY=10
BANK_SIMULATOR_SUCCESS_RATE=0.9

# Idempotency
IDEMPOTENCY_KEY_TTL_HOURS=24

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_MAX_RETRIES=3
CELERY_TASK_RETRY_BACKOFF=True
CELERY_TASK_RETRY_BACKOFF_MAX=600

# Admin Settings
ADMIN_EMAILS=["admin@example.com"]
ADMIN_SESSION_SECRET=admin123

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=["*"]
